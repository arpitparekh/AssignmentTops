<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.example.assignmenttops.sqllite_crud_operations_new.database_sqllite.Data" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"


        android:orientation="vertical"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvIdSqlNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(data.id_new)}" />

            <TextView
                android:id="@+id/tvFirstNameSqlNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{data.firstName_new}" />

            <TextView
                android:id="@+id/tvLastNameSqlNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{data.lastName_new}" />

            <TextView
                android:id="@+id/tvEmailSqlNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{data.email_new}" />

            <TextView
                android:id="@+id/tvAgeNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(data.age)}" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>