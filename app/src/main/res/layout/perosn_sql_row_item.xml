<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="personsql"
            type="com.example.assignmenttops.sqllite_crud_operations.database.PersonDataSql" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvIdSql"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{`Id is : `+String.valueOf(personsql.id)}"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvFirstNameSql"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{`First Name : `+personsql.firstName}"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvLastNameSql"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{`Last Name : `+personsql.lastName}"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvEmailSql"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{`Email : `+personsql.email}"
            android:textSize="20dp" />

    </LinearLayout>
</layout>