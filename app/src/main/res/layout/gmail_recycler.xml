<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="gmail"
            type="com.example.assignmenttops.dialog_assignment.GmailData" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardBackgroundColor="#A2FF8D"
        app:cardUseCompatPadding="true"
        android:id="@+id/cardView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/tvNameGmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{gmail.name}"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tvMessageGmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{gmail.message}"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/tvDateGmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{gmail.date}"/>

        <TextView
            android:id="@+id/tvTimeGmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{gmail.time}"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>